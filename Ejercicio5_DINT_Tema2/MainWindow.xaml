        <TextBlock Text="Color de Texto:" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Margin="568,199,0,0"/>
        <RadioButton x:Name="azulRadioButton" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Azul" GroupName="colores" Click="azulRadioButton_Click" Margin="683,166,0,0"/>
        <RadioButton x:Name="rojoRadioButton" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Rojo" GroupName="colores" Click="rojoRadioButton_Click" Margin="683,200,0,0"/>
        <RadioButton x:Name="verdeRadioButton" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Verde" GroupName="colores" Click="verdeRadioButton_Click" Margin="683,230,0,0"/>
        <TextBlock x:Name="salidaTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" TextWrapping="Wrap" Background="Gold" Width="686" Margin="39,318,0,0" Height="68"/>
    </Grid>
</Window>
